from django.http import HttpResponse, HttpResponseRedirect
from django.shortcuts import render_to_response
from quoter.models import *
from django.contrib.auth.models import User

def quote(request,quote_token):
        # Check if valid
        # Check if expired
        # Record request
        
        # serve quote
        quoteHeader = Quotes.objects.get(token=quote_token)
        quoteLines  = QuoteLines.get(quote=quoteHeader)
        total = 0 
        for line in quoteLines
           total = total + line.amount
        return render_to_response('index.html',{'quote':quote,'quoteLines':quoteLines,'total':total})

